<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.project_graphic.changeController">
    <ImageView fx:id="backgroundImage" fitHeight="600" fitWidth="800" pickOnBounds="true" preserveRatio="true" />

    <Text fx:id="titleText" layoutX="290.0" layoutY="48.0" styleClass="title-text" text="Change Profile Info" />

    <TextField fx:id="username" layoutX="287.0" layoutY="128.0" promptText="username" />
    <TextField fx:id="password" layoutX="287.0" layoutY="182.0" promptText="password" />
    <TextField fx:id="mail" layoutX="286.0" layoutY="242.0" promptText="mail" />
    <TextField fx:id="nickname" layoutX="287.0" layoutY="300.0" promptText="nickname" />
    <TextField fx:id="sec" layoutX="287.0" layoutY="358.0" promptText="security answer" />

    <Button fx:id="apply" layoutX="432.0" layoutY="437.0" minHeight="40" minWidth="100" onAction="#setApply" text="Apply Changes" />
    <Button fx:id="exit" layoutX="236.0" layoutY="437.0" minHeight="40" minWidth="100" onAction="#setExit" text="Exit" />
   <Label fx:id="txt" layoutX="287.0" layoutY="85.0" prefHeight="18.0" prefWidth="219.0" textAlignment="CENTER">
      <font>
         <Font name="System Bold" size="18.0" />
      </font>
   </Label>

    <stylesheets>
        <URL value="@profile.css" />
    </stylesheets>
</AnchorPane>
