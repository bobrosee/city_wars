<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.project_graphic.RandomController">
    <ImageView fx:id="backgroundImage" fitHeight="634.0" fitWidth="973.0" layoutX="-13.0" layoutY="-17.0" pickOnBounds="true" preserveRatio="true" />

    <Text fx:id="message" layoutX="304.0" layoutY="89.0" styleClass="title-text" textAlignment="CENTER" wrappingWidth="180.0">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Text>

    <TextField fx:id="UsernameField" layoutX="250" layoutY="150" minHeight="40" minWidth="300" promptText="Username" styleClass="text-field" />
    <TextField fx:id="nicknameField" layoutX="250" layoutY="200" minHeight="40" minWidth="300" promptText="Nickname" styleClass="text-field" />
    <TextField fx:id="EmailField" layoutX="250" layoutY="250" minHeight="40" minWidth="300" promptText="Email" styleClass="text-field" />

    <Button fx:id="generatePasswordButton" layoutX="190.0" layoutY="300.0" minHeight="40" minWidth="150" onAction="#generate" styleClass="button" text="Generate Password" />
    <TextField fx:id="randomPass" editable="false" layoutX="410" layoutY="300" minHeight="40" minWidth="140" promptText="randomPass" styleClass="text-field" />
    <TextField fx:id="confirmation" layoutX="250" layoutY="350" minHeight="40" minWidth="300" promptText="Confirm Password" styleClass="text-field" />

    <Button layoutX="250" layoutY="420" minHeight="50" minWidth="150" onAction="#back" styleClass="button" text="Back" />
    <Button fx:id="submitButton" layoutX="410.0" layoutY="420.0" minHeight="50" minWidth="150" onAction="#done" styleClass="button" text="Submit" />

    <stylesheets>
        <URL value="@randomSignUp.css" />
    </stylesheets>
</AnchorPane>
