<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.project_graphic.loginController">
    <ImageView fx:id="backgroundImage" fitHeight="600" fitWidth="800.0" pickOnBounds="true" preserveRatio="true" />

    <Text fx:id="message" layoutX="300" layoutY="50" styleClass="title-text" textAlignment="CENTER" />

    <TextField fx:id="username" layoutX="200.0" layoutY="150.0" minWidth="400" promptText="Username" styleClass="text-field" />
    <TextField fx:id="password" layoutX="200.0" layoutY="220.0" minWidth="400" promptText="Password" styleClass="text-field" />

    <Button fx:id="forgotPass" layoutX="332.0" layoutY="286.0" onAction="#setRecovery" styleClass="password-recovery-button" text="Forgot Password?" />

    <Button fx:id="exit" layoutX="100.0" layoutY="368.0" minHeight="50" minWidth="100" onAction="#setExit" styleClass="button" text="Back" />
    <Button fx:id="loginbtn" layoutX="600.0" layoutY="361.0" minHeight="50" minWidth="100" onAction="#setLoginbtn" styleClass="button" text="Login" />

    <stylesheets>
        <URL value="@loginMenu.css" />
    </stylesheets>
</AnchorPane>
