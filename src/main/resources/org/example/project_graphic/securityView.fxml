<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.project_graphic.SecurityController">
    <ImageView fx:id="backgroundImage" fitHeight="600" fitWidth="800" pickOnBounds="true" preserveRatio="true" />

    <Text fx:id="message" layoutX="253.0" layoutY="100.0" styleClass="title-text" wrappingWidth="293.2265625" />

    <ChoiceBox fx:id="comboBox" layoutX="250" layoutY="150" minHeight="40" minWidth="300" styleClass="choice-box">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="What is your mother's maiden name?" />
                <String fx:value="What was the name of your first pet?" />
                <String fx:value="What was the make of your first car?" />
            </FXCollections>
        </items>
    </ChoiceBox>
    <TextField fx:id="ans" layoutX="250" layoutY="200" minHeight="40" minWidth="300" promptText="Answer" styleClass="text-field" />
    <TextField fx:id="confirm" layoutX="250" layoutY="250" minHeight="40" minWidth="300" promptText="Confirm Answer" styleClass="text-field" />

    <Text fx:id="captcha" layoutX="233.0" layoutY="326.0" styleClass="title-text" wrappingWidth="332.0">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Text>
    <TextField fx:id="cAnswer" layoutX="250" layoutY="350" minHeight="40" minWidth="300" promptText="Enter CAPTCHA" styleClass="text-field" />

    <Button fx:id="backButton" layoutX="249.0" layoutY="420.0" minHeight="50" minWidth="150" onAction="#backButton" styleClass="button" text="Back" />
    <Button fx:id="submitButton" layoutX="401.0" layoutY="420.0" minHeight="50" minWidth="150" onAction="#checkAnswer" styleClass="button" text="Submit" />

    <stylesheets>
        <URL value="@securityQuestion.css" />
    </stylesheets>
</AnchorPane>
